#include<iostream>                             
#define pi 3.1416
class circle
{
    float radius;
    void showarea();
    friend int main();
};
void circle::showarea()
{
    cout<<"area="<<pi*radius*radius<<endl;
}
int main(void)
{
    circle x;
    x.radius=5.00;
    x.showarea();
}

