#include<iostream>
#include<conio.h>
#include<string.h>
#include<stdio.h>
using namespace std;
// made by harsh dave 2019 ©


int main()

{

    char str1[20], str2[20];

    int i, j, len = 0, flag = 0;

    cout << "Enter the string : ";

    gets(str1);

    len = strlen(str1) - 1;

    for (i = len, j = 0; i >= 0 ; i--, j++)

        str2[j] = str1[i];

    if (strcmp(str1, str2))

        flag = 1;

    if (flag == 1)

        cout << str1 << " is not a palindrome";

    else

        cout << str1 << " is a palindrome";

    return 0;

}

//comment
